<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

     <display-name>Spring MVC Project Diary</display-name>

    <servlet>
        <servlet-name>ProjectDiary</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProjectDiary</servlet-name>
        <url-pattern>/*(.html|.jsp)</url-pattern> <!-- If you put just '/' css files won't work -->
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/ProjectDiary-servlet.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <filter>
        <filter-name>WhiteFilter</filter-name>
        <filter-class>com.gab.controllers.filters.WhiteList</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WhiteFilter</filter-name>
        <url-pattern>/dashboard.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>WhiteFilter</filter-name>
        <url-pattern>/showdiaries</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>WhiteFilter</filter-name>
        <url-pattern>/register-success</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/error.html</location>
    </error-page>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>